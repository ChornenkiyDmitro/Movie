<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.welcome.WelcomeActivity"
    android:background="@color/dark_purple">

    <TextView
        android:id="@+id/txWelcomeSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:text="@string/text_welcome_sign_in"
        android:textColor="@color/saffron"
        android:textSize="@dimen/text_size_36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txWelcomeSignUp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="165dp"
        android:text="@string/text_welcome_sign_up"
        android:textColor="@color/saffron"
        android:textSize="@dimen/text_size_36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txWelcomeSignIn" />

</androidx.constraintlayout.widget.ConstraintLayout>