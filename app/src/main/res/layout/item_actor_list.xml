<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@color/royal_purple">

    <ImageView
        android:id="@+id/imageActorPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_account"/>

    <TextView
        android:id="@+id/textActorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="@string/text_actor_name"
        android:textSize="@dimen/text_size_22dp"
        app:layout_constraintStart_toEndOf="@+id/imageActorPhoto"
        tools:layout_editor_absoluteY="15dp" />


</androidx.constraintlayout.widget.ConstraintLayout>